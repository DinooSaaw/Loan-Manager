{
  "name": "loan-manager",
  "author": "DinooSaaw",
  "description": "A loan management application to track loans, payments, and generate notices.",
  "repository": {
    "type": "git",
    "url": "https://github.com/DinooSaaw/Loan-Manager.git"
  },
  "private": true,
  "version": "1.0.8",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "electron:build": "dotenv -e .env -- vite build && dotenv -e .env -- electron-builder --publish always"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.344.0",
    "pdf-lib": "^1.17.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^8.0.0",
    "electron": "^29.1.0",
    "electron-builder": "^24.12.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^6.2.6",
    "vite-plugin-electron": "^0.28.4"
  },
  "build": {
    "appId": "com.electron.loanmanager",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "icon": "electron/assets/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "electron/assets/icon.icns",
      "category": "public.app-category.finance"
    },
    "linux": {
      "icon": "electron/assets/icon.png",
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "DinooSaaw",
        "repo": "Loan-Manager"
      }
    ]
  }
}
